<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox alignment="center" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <ListView fx:id="employeeListView" />
    <VBox spacing="4.0">
        <HBox>
            <Label prefWidth="100" text="First Name" />
            <TextField fx:id="firstNameTextField" prefWidth="150" />
        </HBox>
        <HBox>
            <Label prefWidth="100" text="Last Name" />
            <TextField fx:id="lastNameTextField" prefWidth="150" />
        </HBox>
        <HBox>
            <Label prefWidth="100" text="Is Active" />
            <CheckBox fx:id="isActiveCheckBox" />
        </HBox>
        <HBox>
            <Label prefWidth="100" text="Misc." />
            <TextField prefWidth="150" />
         <VBox.margin>
            <Insets />
         </VBox.margin>
        </HBox>
      <opaqueInsets>
         <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
      </opaqueInsets>
      <padding>
         <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
      </padding>
    </VBox>

</HBox>
